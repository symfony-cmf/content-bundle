<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="cmf_content.admin" class="%cmf_content.persistence.phpcr.admin.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.cmf" label_catalogue="CmfContentBundle" label="dashboard.label_static_content" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_content.persistence.phpcr.document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setRootPath">
                <argument>%cmf_content.persistence.phpcr.content_basepath%</argument>
            </call>

            <call method="setIvoryCkeditor">
                <argument>%cmf_content.ivory_ckeditor.config%</argument>
            </call>
        </service>
    </services>
</container>
